@model List<SaafiLogistics.Models.Load>
<h1>@{ViewBag.title = "List of Loads";}</h1>

@if (Model.Count == 0)
{
    <p>No Loads yet!</p>

}

<table class="table table-striped">
    <tr>
        <th>Date</th>
        <th>Number</th>
        <th>Description</th>
        <th>Owner</th>
        <th>Pay</th>
        <th>Advance</th>
        <th>Net</th>
    </tr>
    @foreach (var allLoads in Model)
    {
        <tr>
            <td>@allLoads.Date</td>
            <td>@allLoads.Number</td>
            <td>@allLoads.Description</td>
            <td>@allLoads.Owner</td>
            <td>@allLoads.Pay</td>
            <td>@allLoads.Advance</td>
            <td>@allLoads.Net</td>
        </tr>


    }
</table>
