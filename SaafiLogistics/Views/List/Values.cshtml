@model List<SaafiLogistics.Models.Load>
<h1>@ViewBag.title</h1>

<table class="table table-striped">
    @for (int i = 0; i < ViewBag.items.Count; i++)
    {
        <tr class="@( i % 2 == 0 ? "even" : "odd" ) " >
            <td><a asp-controller="List" asp-action="Loads" asp-route-column="@ViewBag.column" asp-route-value="@ViewBag.items[i]">@ViewBag.items[i]</a></td>
        </tr>
    }
</table>