
<h1>@ViewBag.title</h1>

<form method = "post">

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.loads != null)
{

    <h3>@ViewBag.loads.Count Result(s)</h3>
    <table class="table table-striped">

        @foreach (Dictionary<string, string> load in ViewBag.loads)
        {
            @foreach (KeyValuePair<string, string> item in load)
            {
                <tr class="table table-striped">
                    <td><a asp-controller="Search" asp-action="Load" asp-route-column="@item.Key" asp-route-value="@item.Value">@item.Key @item.Value</a></td>
                </tr>
            }
        }

    </table>

    // TODO #2 - Loop over jobs dictionary and display all job fields
}